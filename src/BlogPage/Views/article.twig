{% extends 'layout.twig' %}

{% block content %}
    <header>
    <h1 class="text-2xl my-2">{{ article.title }}</h1>
    </header>

    <p class="my-6">{{ article.content }}</p>

    <footer><a href="/" class="btn">Back to the home page</a></footer>

    <div class="my-4">
        <p class="mb-2">
            To read this article in the CLI, run the following command:
        </p>
        <pre class="my-2 p-2 bg-gray-700 text-white"><code>php console.php article {{ article.id }}</code></pre>
    </div>

{% endblock %}