        <div class="text-white m-4">
        {% if button['email'] %}
            <div class="py-1 my-2">{{ button['email'] }}</div>
            <div>
                <a class="px-2 py-1 border rounded border-white hover:bg-blue-500 duration-500" href="/logout">Wyloguj</a>
            </div>
        {% else %}
            <a class="py-1" href="{{ button['code'] }}">Zaloguj w google</a>
        {% endif %}
        </div>
    </div>
<main class="m-6 lg:mt-16 max-w-3xl w-full">
    {% block content %}
    {% endblock %}
</main>
</div>

</body>
